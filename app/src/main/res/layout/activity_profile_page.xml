<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"

    tools:context="com.example.avocado1.ProfilePage">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">


        <TextView
            android:layout_marginTop="5sp"
            android:id="@+id/edit_profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Edit profile"
            android:textSize="10sp"/>




    </LinearLayout>


    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"

        android:layout_marginBottom="236dp">


        <Button
            android:id="@+id/playNow"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/genre_horror"
            android:text="Horror"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/yourStats"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="7dp"
            android:layout_toRightOf="@id/playNow"
            android:background="@drawable/genre_action"
            android:text="Stats"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/leaderboard"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_below="@id/yourStats"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/settings"
            android:background="@drawable/genre_comedy"
            android:text="Leader Board"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/settings"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_below="@id/playNow"
            android:layout_marginLeft="40dp"
            android:background="@drawable/genre_drama"
            android:text="Settings"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/settings1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_below="@id/playNow"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/genre_scifi"
            android:text="Settings"
            android:textAllCaps="false" />


    </RelativeLayout>





</RelativeLayout>